.addconfirm
    .back
        position: fixed
        top: 0
        padding: 20px 16px
        width:100%
        z-index:10
        background-color: #f5f6f7
        .backcontain
            *:not(span)
                float:left
            img
                background-position:center
                margin:0
            span
                padding-top: 7px
                display: block
                @media only screen and (max-width: 440px)
                    padding-top: 0
        img.klogo
            margin-right: 10px
            display: block
            width: 32px
            height: 32px
        div.nobackbtn
            height: 20px
            width: 20px
            margin-top: 6px
            display: block
            float: left
            margin-right: 5px
            border-radius: 4px;
            border: 1px solid transparent;
        a.backbtn
            height: 20px
            width: 20px
            margin-top: 6px
            display: block
            float: left
            margin-right: 5px
            border-radius: 4px;
            border: 1px solid transparent;
            div.arrow
                width: 0
                height: 0
                border-top: 5px solid transparent
                border-bottom: 5px solid transparent
                border-right: 8px solid #888
                margin: 4px
            &:hover
                border-radius: 4px
                border: 1px solid #CCC
                box-shadow:0px 0px 1px 0px #AAA
                -moz-box-shadow:0px 0px 1x 0px #AAA
                -webkit-box-shadow:0px 0px 1px 0px #AAA
        span.hi
            font-size: 16px
            line-height: 30px
            float: left
    .addconfirminner
        position: relative
        background-color: white
        top: 72px
        height: 375px
        padding: 50px 20px
        margin: 0 20px
        border: 1px solid #ccc
        box-shadow: 0 2px 0 rgba(255,255,255,.8),inset 0 1px 1px rgba(0,0,0,.1)
        p.confirm
            color: #444
            font-size: 18px
            text-align: center
            font-weight: bold
            margin-bottom: 20px
        p.imageholder
            text-align: center
            margin: 30px auto
        .buttonscontainer
            text-align: center
            .button
                margin: 5px 10px
    footer
        padding-left: 20px
        position:absolute
        bottom:30px

        .textcontainer
            span
                font-size:14px
                margin-right:5px
                color:#999999
            img
                height:20px
                margin-bottom:1px
